@using WebApplication3.Models;
@model WebApplication3.Entity.AccountEntity
@{
    ViewBag.Title = "RegistrationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-8 col-lg-offset-2 form-horizontal col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
        <div class="form-group">
            <div class="col-lg-6 col-lg-offset-2">
                <h2>Registration Form</h2>
            </div>
        </div>

        @using (Html.BeginForm("AddRegistration", "Account"))
        {
            <div class="form-group">
                <label class="col-lg-2 col-md-2 col-sm-2">UserName</label>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", placeholder = "Input name", type = "text" })
                    @Html.ValidationMessageFor(m => m.AccountName, "", new { @class = "alert-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-md-2 col-sm-2">Password</label>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    @Html.TextBoxFor(m => m.AccountPass, new { @class = "form-control", placeholder = "Input password", type = "password" })
                    @Html.ValidationMessageFor(m => m.AccountPass, "", new { @class = "alert-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-md-2 col-sm-2">Re-Password</label>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    @Html.TextBoxFor(m => m.RePass, new { @class = "form-control", placeholder = "Input re-password", type = "password" })
                    @Html.ValidationMessageFor(m => m.RePass, "", new { @class = "alert-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-md-2 col-sm-2">Role</label>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    @Html.DropDownListFor(m => m.ListRole, new SelectList(ViewBag.lstRoles, "Value", "Text"), htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-2 col-lg-offset-2 col-md-2 col-md-offset-2 col-sm-offset-2 col-sm-2 col-xs-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-lg-2 col-lg-offset-1 col-sm-offset-5  col-sm-offset-1 col-xs-2 col-xs-offset-2" style="margin-top:8px">
                    <a href="@Url.Action("Index","Account")" class="badge badge-primary">Comeback</a>
                </div>
            </div>
        }
        <div class="alert-danger"> @ViewBag.error</div>
    </div>
</div>

